	                        ! 2=mpdata (for scalars with ref state added)
	nm1%monotone=.true.,    ! monotone advection   (for scalars)
	nm1%kord=3,    			! order for mpdata advection scheme
	nm1%output_interval=10.,
	nm1%rotation_period_hours=24.,
	nm1%moisture=.true.,
	nm1%nq=3,
	nm1%ip=1,
	nm1%jp=101,
	nm1%kp=120,
